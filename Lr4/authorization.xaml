<Window x:Class="Lr4.authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lr4"
        mc:Ignorable="d"
        Title="authorization" Height="450" Width="300">
    <Grid Background="#5da130">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical" Margin="10">
            
            <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold">Авторизация</TextBlock>

            <TextBlock HorizontalAlignment="Left" FontSize="15">Электронная почта</TextBlock>
            <TextBox x:Name="emailTextbox" FontSize="15"></TextBox>

            <TextBlock Margin="0 10 0 0" HorizontalAlignment="Left" FontSize="15">Пароль</TextBlock>
            <PasswordBox x:Name="passwordTextbox" FontSize="15" ></PasswordBox>

            <Button Margin="20" IsDefault="True" Click="EnterButton_Click">Вход</Button>

            <Button Margin="20 0 " Click="AddVeterinarianButton_Click">Добавить нового ветеринара</Button>
        </StackPanel>
    </Grid>
</Window>
